<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer's Cards"
        android:layout_toRightOf="@+id/dealerCard2"
        />

    <TextView
        android:id="@+id/dealerCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="60dp"
        android:height="80dp"
        android:background="#98AFC7"
        android:layout_marginTop="20dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/dealerCard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="60dp"
        android:height="80dp"
        android:background="#98AFC7"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/dealerCard1"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/dealerCard3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#98AFC7"
        android:width="60dp"
        android:height="80dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/dealerCard2"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/dealerCard4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#98AFC7"
        android:width="60dp"
        android:height="80dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/dealerCard3"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/dealerCard5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#98AFC7"
        android:width="60dp"
        android:height="80dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/dealerCard4"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player's Cards"
        android:layout_toRightOf="@+id/dealerCard2"
        android:layout_below="@id/playerCard2"
        />

    <TextView
        android:id="@+id/playerCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="60dp"
        android:height="80dp"
        android:background="#98AFC7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/dealerCard1"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/playerCard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="60dp"
        android:height="80dp"
        android:background="#98AFC7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/dealerCard1"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/playerCard1"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/playerCard3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="60dp"
        android:height="80dp"
        android:background="#98AFC7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/dealerCard2"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/playerCard2"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/playerCard4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="60dp"
        android:height="80dp"
        android:background="#98AFC7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/dealerCard2"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/playerCard3"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/playerCard5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="60dp"
        android:height="80dp"
        android:background="#98AFC7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/dealerCard2"
        android:textSize="50dp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/playerCard4"
        />


    <TextView
        android:id="@+id/gameOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="1000dp"
        android:height="100dp"
        android:layout_below="@+id/dealerCard2"
        android:background="#FF0000"
        android:textSize="30dp"
        android:visibility="invisible"
        android:textAlignment="center"/>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="50dp"
        android:layout_below="@+id/playerCard1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Play"
        android:onClick="letsPlay"/>

    <Button
        android:id="@+id/hitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/playerCard1"
        android:layout_toRightOf="@id/button"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:text="Hit"
        android:onClick="hit"/>

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/playerCard1"
        android:layout_toRightOf="@id/hitButton"
        android:visibility="invisible"
        android:layout_marginTop="30dp"
        android:text="Stop"
        android:onClick="stop"
        />

    <Button
        android:id="@+id/restartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/playerCard1"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:text="New Game"
        android:onClick="restartGame"
        />
</RelativeLayout>

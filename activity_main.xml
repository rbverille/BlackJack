<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/dealerCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="150dp"
        android:background="@color/cardColor"
        android:layout_marginTop="10dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/dealerCard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="150dp"
        android:background="@color/cardColor"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/dealerCard1"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/cpTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/dealerCard2"
        />


    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerCard2"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/playerCard2"
        />

    <TextView
        android:id="@+id/playerCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="150dp"
        android:background="@color/cardColor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/dealerCard1"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/playerCard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="150dp"
        android:background="@color/cardColor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/dealerCard1"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/playerCard1"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/playerCard3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="150dp"
        android:background="@color/cardColor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/dealerCard2"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/playerCard2"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/newTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dp"
        android:height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/playerCard1"
        android:layout_marginTop="30dp"
        android:text="Play"
        android:onClick="letsPlay"/>


    <Button
        android:id="@+id/hitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playerCard2"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/playerCard2"
        android:text="Hit"
        android:onClick="hit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/dealerCard2"
        android:layout_toRightOf="@id/dealerCard2"
        android:text="Stop"/>


</RelativeLayout>
